{% extends 'base.html.twig' %}

{% block title %}opération{% endblock %}

{% block body %}

<div style="margin-left: 30px; margin-right: 30px;">
    <div class="example-wrapper" style="text-align: center; margin-top:30px">
    <h1>OPÉRATIONS </h1>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <table id="table">
        <thead>
        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Titre</th>
            <th>Clients</th>
            <th>Type</th>
        </tr>
        </thead>
        <tbody>
        {% for operation in operations %}
            <tr>

                <td>{{ operation.users.nom }}</td>
                <td>{{ operation.users.prenom }}</td>
                <td>{{ operation.titre }}</td>
                <td>{{ operation.client.prenom }}</td>
                <td>{{ operation.categories.nom }}</td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <script type="text/javascript">
        $("#table").dataTable({});
    </script>
{% endblock %}