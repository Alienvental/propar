{% extends 'base.html.twig' %}

{% block title %}{% trans %}Utilisateur{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Collaborateurs{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Prénom{% endtrans %}</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>{% trans %}Nom{% endtrans %}</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td> {% if user.roles == ["ROLE_EXPERT","ROLE_USER"] %}
                    EXPERT</td>

                {% elseif user.roles == ["ROLE_SENIOR","ROLE_USER"]%}
                SENIOR
                {% elseif user.roles == ["ROLE_APPRENTI","ROLE_USER"]%}
                {% trans %}APPRENTI{% endtrans %}
                {% endif%}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('app_users_index') }}" class="btn btn-warning">{% trans %}Revenir à la liste des collaborateurs{% endtrans %}</a>
    <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-info">{% trans %}Modifier{% endtrans %}</a>


    {{ include('users/_delete_form.html.twig') }}

{% endblock %}
